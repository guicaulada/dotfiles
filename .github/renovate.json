{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "schedule": ["before 9am on monday"],
  "minimumReleaseAge": "7 days",
  "pre-commit": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["home/\\.chezmoiexternal\\.toml$"],
      "matchStrings": [
        "url\\s*=\\s*\"https://raw\\.githubusercontent\\.com/(?<depName>[^/]+/[^/]+)/(?<currentDigest>[a-f0-9]{40})/[^\"]+\"\\s*#\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "git-refs",
      "packageNameTemplate": "https://github.com/{{{depName}}}"
    }
  ]
}
